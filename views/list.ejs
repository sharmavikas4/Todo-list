<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">
  <% newListItems.forEach((newListItem)=>{ %>
  <form class="" action="/delete" method="post">
    <div class="item">
      <input name="checkbox" value="<%=newListItem._id%>" type="checkbox" onchange="this.form.submit()">
      <p><%=  newListItem.name  %></p>
    </div>
    <input type="hidden" name="listName" value="<%=listTitle%>">
  </form>
  <%  }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%=listTitle%>">+</button>
  </form>
</div>
<div class="box">
  <form class="" action="/post" method="post">
    <input type="text" placeholder="Enter the new list name" name="listName">
    <button type="submit">+</button>
  </form>
</div>
<%- include("footer") -%>
